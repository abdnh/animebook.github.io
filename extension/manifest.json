{
    "manifest_version": 3,
    "name": "Animebook Anki Export",
    "version": "1.0.3",
    "description": "Anki integration for animebook.github.io",
    "author": "Animebook",
    "icons": {
        "16": "img/icon16.png",
        "19": "img/icon19.png",
        "32": "img/icon32.png",
        "38": "img/icon38.png",
        "48": "img/icon48.png",
        "64": "img/icon64.png",
        "128": "img/icon128.png"
    },
    "action": {
        "default_icon": {
            "16": "img/icon16.png",
            "19": "img/icon19.png",
            "32": "img/icon32.png",
            "38": "img/icon38.png",
            "48": "img/icon48.png",
            "64": "img/icon64.png",
            "128": "img/icon128.png"
        },
        "default_title": "Animebook Anki Export",
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["file://*/*", "*://*.animebook.github.io/*", "*://*/animebook.*", "*://*/animebook"],
            "js": [
                "bg/js/lib/vue.min.js", 
                "fg/event_channel.js", 
                "fg/toast.js", 
                "fg/caption_utils.js", 
                "fg/icons.js",
                "fg/selection_highlighter.js",
                "fg/card_creator.js",
                "fg/frontend.js"
            ],
            "match_about_blank": true,
            "all_frames": true
        }
    ],
    "minimum_chrome_version": "57.0.0.0",
    "options_page": "bg/settings.html",
    "options_ui": {
        "page": "bg/settings.html",
        "open_in_tab": true
    },
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "optional_permissions": [
    ],
    "commands": {},
    "web_accessible_resources": [
        {
            "resources": ["bg/background.html", "fg/frontend.css"],
            "matches": ["file://*/*", "https://*/*"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "cross_origin_embedder_policy": {
        "value": "require-corp"
    },
    "cross_origin_opener_policy": {
        "value": "same-origin"
    }
}
